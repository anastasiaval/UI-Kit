include ../text/text
include ../input/input
include ../dropdown/dropdown
include ../button/button

.search-room
    +text({
        tag: 'h1',
        text: 'Найдём номера под ваши&nbsp;пожелания',
        type: 'title',
        positionMod: 'mb-20'
    })
    form
        .search-room__flex
            +input({
                leftLabel: 'прибытие',
                placeholder: 'ДД.ММ.ГГГГ',
                mod: 'datepicker',
                labelMod: 'datepicker',
                positionMod: ['mb-20', 'search-room-calendar']
            })
            +input({
                leftLabel: 'выезд',
                placeholder: 'ДД.ММ.ГГГГ',
                mod: 'datepicker',
                labelMod: 'datepicker',
                positionMod: ['mb-20', 'search-room-calendar']
            })
        +dropdown({
            title: 'гости',
            defaultText: 'Сколько гостей',
            arr: [
                {item: 'взрослые', counterClass: 'adults', num: 0},
                {item: 'дети', counterClass: 'children', num: 0},
                {item: 'младенцы', counterClass: 'infants', num: 0},
            ],
            type: 'guests-4',
            buttons: true,
            positionMod: 'mb-30'
        })
        +button({type: 'submit', text: 'подобрать номер'})

