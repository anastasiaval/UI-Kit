include ../text/text
include ../input/input
include ../button/button

.login
    +text({
        tag: 'h1',
        text: 'Войти',
        type: 'title',
        positionMod: 'mb-14'
    })
    form
        +input({
            placeholder: 'Email',
            type: 'email',
            positionMod: 'mb-5'
        })
        +input({
            placeholder: 'Пароль',
            type: 'password',
            positionMod: 'mb-20'
        })
        +button({type: 'submit', text: 'войти', positionMod: 'mb-30'})
    .login__reg
        span.login__reg_text Нет аккаунта на Toxin?
        +button({type: 'border', text: 'создать'})

