doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title UI Kit
    body
        include components/logo/logo
        .content
            include components/colors/colors
            include components/type/type
        .content
            div
                form.form_wide
                    include components/input/input
                    +input({
                        label_left: 'Text Field',
                        label_right: 'Default',
                        placeholder: 'Email',
                        type: 'text'
                    })
                    +input({
                        label_left: 'Text Field',
                        label_right: 'Hover / Focus',
                        placeholder: 'This is pretty awesome',
                        type: 'text'
                    })
                    include components/dropdown/dropdown
                    +dropdown({
                        label_left: 'Dropdown',
                        label_right: 'Default',
                        defaultField: 'Сколько гостей',
                        expanded: ['взрослые', 'дети', 'младенцы'],
                        startCount: [0, 0, 0],
                        applyBtn: true
                    })
                    +input({
                        label_left: 'masked text field',
                        label_right: 'Default',
                        placeholder: 'ДД.ММ.ГГГГ',
                        type: 'text',
                        mod: 'date'})
                    .form__wrapper
                        +input({
                            label_left: 'date Dropdown',
                            placeholder: 'ДД.ММ.ГГГГ',
                            mod: 'datepicker',
                            labelMod: 'datepicker'
                        })
                        +input({
                            label_left: 'date Dropdown',
                            placeholder: 'ДД.ММ.ГГГГ',
                            mod: 'datepicker',
                            labelMod: 'datepicker'
                        })
                form.form_narrow
                    +input({
                        label_left: 'filter date dropdown',
                        mod: 'filter-datepicker',
                        labelMod: 'filter-datepicker'
                    })
                    +input({
                        label_left: 'subscription text field',
                        placeholder: 'Email',
                        type: 'email',
                        labelMod: 'subscribe'
                    })
            div
                form.form_box.form_narrow
                    +heading('h3', 'Checkbox Buttons')
                    include components/checkbox/checkbox
                    +checkbox('Можно курить', false)
                    +checkbox('Можно с питомцами', true)
                    +checkbox('Можно пригласить гостей (до 10 человек)', true)
                form.form_box
                    +heading('h3', 'Radio buttons')
                    include components/radio/radio
                    +radio('gender', 'male', 'Мужчина', true)
                    +radio('gender', 'female', 'Женщина', false)
                form.form_box
                    +heading('h3', 'Toggle')
                    include components/toggle/toggle
                    +toggle('Получать спецпредложения')
                    +toggle('Получать спецпредложения')
                .form_box
                    +heading('h3', 'Like button')
                    include components/like-btn/like-btn
                    +like(2)
                    +like(11)
            div
                .form_box
                    +heading('h3', 'buttons')
                    include components/button/button
                    div
                        +button({type: 'bg', text: 'click me'})
                        +button({type: 'bg', text: 'click me'})
                    div
                        +button({type: 'border', text: 'click me'})
                        +button({type: 'border', text: 'click me'})
                    div
                        +button({type: 'btn', text: 'click me'})
                        +button({type: 'btn', text: 'click me'})
                    form.form_wide
                        +button({type: 'submit', text: 'перейти к оплате'})
        .content
            div
                form.form_narrow
                    +dropdown({
                        label_left: 'Dropdown',
                        label_right: 'Default',
                        defaultField: '2 спальни, 2 кровати...',
                        expanded: ['спальни', 'кровати', 'ванные комнаты'],
                        startCount: [2, 2, 0],
                        applyBtn: false
                    })
                    +dropdown({
                        label_left: 'Dropdown',
                        label_right: 'expanded',
                        defaultField: '2 спальни, 2 кровати...',
                        expanded: ['спальни', 'кровати', 'ванные комнаты'],
                        startCount: [2, 2, 0],
                        applyBtn: false
                    })
            div
            div
